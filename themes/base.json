{
  "vars": {
    "--color-primary": "#607D8B",
    "--color-dark-primary": "#263238",
    "--color-light-primary": "#CFD8DC",
    "--color-accent": "#FFD600",
    "--color-background": "white",
    "--color-foreground": "black",

    "--color-border": "var(--color-dark-primary)",
    "--color-background-dark": "var(--color-light-primary)",
    "--color-background-darker": "var(--color-primary)",
    "--color-highlight": "var(--color-accent)",
    "--color-shadow": "var(--color-primary)",
    "--color-font": "var(--color-foreground)",
    "--color-font-dark": "var(--color-background)",

    "--drop-shadow-layer-1": "0px 2px 5px var(--color-shadow)",
    "--drop-shadow-layer-2": "0px 4px 10px var(--color-shadow)",
    "--drop-shadow-layer-3": "0px 6px 15px var(--color-shadow)",
    "--drop-shadow-layer-4": "0px 8px 20px var(--color-shadow)",
    "--drop-shadow-layer-5": "0px 10px 25px var(--color-shadow)",

    "--card-height": "100px",
    "--card-width": "75px",
    "--component-width": "50px",
    "--component-height": "50px",

    "--border": "2px solid var(--color-border)",

    "--font": "\"Roboto\", Helvetica, Arial, sans-serif",

    "--transition-duration": ".3s"
  }
}
